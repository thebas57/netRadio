{% set root = base_url() %}
{% block head %}
    <link rel="stylesheet" href="{{ root }}/public/style/css/Navbar.css"
{% endblock %}
{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a style='margin-right:45px;' href="{%block redirection %}{{ path_for('accueil') }}{% endblock %}"> <img class="navbar-brand" src="{{ root }}/public/images/logo_netradio.png"></a>
        <!-- collapse : hides the content
        data-target: assign a control of one collapsible element. Need the class collapse to the collapsible element
        aria-expended : false means that the collapsible element is closed by default-->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle Navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- m : margin
        my : height
        sm/md/lg : small/medium/large screen
        mr : space on the right
        ml : space on the left -->
        <div id="navbarMenu" class="navbar-collapse collapse my-2">
            {% block fonction %}{% endblock %}
            {% block connexion %}
            {% if not session.user %}
                <ul class="navbar-nav ml-auto">
