{% extends "Template.html.twig" %}

{% block css %}
    <link rel="stylesheet" href="{{ base_url() }}/public/style/css/AccueilAnimateur.css"/>
{% endblock %}

{% block body %}
    {{ parent() }}

    <h1>{{ programmeNom }}</h1>

    <h2>Emissions à venir</h2>

    <div class="container-fluid myContainerFluid">
        <table class="table table-dark table-borderless">
            <tbody>
                {% for emission in emissions%}
                    <tr>
                        <td class="nameProg">

                            {{ emission.date }} - de {{ emission.debut }} à {{ emission.fin }}
                        </td>
                        <td class="containerBouton">
                            <a href="{{ base_url() }}/animerEmission/{{ emission.emission_id }}" class="boutonAnimer">Enregistrer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>

        </table>
    </div>

{% endblock %}