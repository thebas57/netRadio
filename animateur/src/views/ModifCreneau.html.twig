{% extends 'Template.html.twig' %}
{% set root = base_url() %}

{% block css %}
	<link rel="stylesheet" href="{{ root }}/public/style/css/Creneau.css">
{% endblock %}

{% block body %}
	{{ parent() }}
	<style>
		body {
			background-color: lightgrey;
		}
	</style>

	<div class="titre">
		<h1>Modifier le créneau </h1>
	</div>

	<div class="formulaire divForm container-fluid">
		<form action="{{ base_url() }}/modifCreneau{{creneau.creneau_id}}" method="post" class="myForm" id="xxxx">

			<div class="form-group">
				<label for="emission">Emission :</label>
				<select class="custom-select" id="emission" name="emission">
                    <optgroup label="Choisissez une émission">
                        {% for emission in emissions %}
                            <option value="{{ emission.emission_id }}">
                                {{emission.titre}}
                            </option>
                        {% endfor %}
                    </optgroup>
				</select>
			</div>

			<div class="form-group">
				<label for="date">Date :</label>
				<input class="form-control" type="date" id="date" name="date" value="{{ creneau.date_creneau }}">
			</div>

			<div class="form-row">
				<div class="form-group col-md-6 col-xs-12">
					<label for="hdd">Heure de début :</label>
					<input class="form-control" type="time" id="hdd" name="hdd" step="60" value="{{ creneau.heure_debut }}">
				</div>

				<div class="form-group col-md-6 col-xs-12">
					<label for="hdf">Heure de fin :</label>
					<input class="form-control" type="time" id="hdf" name="hdf" value="{{ creneau.heure_fin }}">
				</div>
			</div>

<!--
			<div class="form-group">
				<label for="repeat">Répéter</label>
				<select class="custom-select mr-sm-2">
					<option value="jamais">
						Jamais
					</option>
					<option value="semaine">
						Toutes les semaines
					</option>
				</select>
			</div>
			-->
			<button class="btn btn-primary" type="submit">Modifier</button>
		</div>

	</form>

{% endblock %}
