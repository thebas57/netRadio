{% extends 'Template.html.twig' %}
{% set root = base_url() %}

{% block css %}
	<link rel="stylesheet" href="{{ root }}/public/style/css/Creneau.css">
{% endblock %}

{% block body %}
	{{ parent() }}
	<style>
		body {
			background-color: lightgrey;
		}
	</style>

	<div class="titre">
		<h1>Ajouter un créneau</h1>
	</div>

	<div class="formulaire divForm container-fluid">
		<form action="{{ base_url() }}/addCreneau" method="post" class="myForm" id="xxxx">

			<div class="form-group">
				<label for="emission">Emission :</label>
				<select class="custom-select" id="emission" name="emission">
					{% for emission in emissions %}
						<option value="{{ emission.emission_id }}">
							{{emission.titre}}
						</option>
					{% endfor %}
				</select>
			</div>

			<div class="form-group">
				<label for="date">Date :</label>
				<input class="form-control" type="date" id="date" name="date">
			</div>

			<div class="form-row">
				<div class="form-group col-md-6 col-xs-12">
					<label for="hdd">Heure de début :</label>
					<input class="form-control" type="time" id="hdd" name="hdd" step="60">
				</div>

				<div class="form-group col-md-6 col-xs-12">
					<label for="hdf">Heure de fin :</label>
					<input class="form-control" type="time" id="hdf" name="hdf">
				</div>
			</div>

<!--
			<div class="form-group">
				<label for="repeat">Répéter</label>
				<select class="custom-select mr-sm-2">
					<option value="jamais">
						Jamais
					</option>
					<option value="semaine">
						Toutes les semaines
					</option>
				</select>
			</div>
			-->
			<button class="btn btn-primary" type="submit">Ajouter</button>
		</div>

	</form>

{% endblock %}
