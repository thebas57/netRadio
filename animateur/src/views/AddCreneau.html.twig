{% extends 'Template.html.twig' %}
{% set root = base_url() %}

{% block script %}
	<script src="{{ root }}/public/js/Creneau.js"></script>
{% endblock %}

{% block css %}
	<link rel="stylesheet" href="{{ root }}/public/style/css/Creneau.css">
{% endblock %}

{% block body %}

	<style>
		body {
			background-color: lightgrey;
		}
	</style>

	<div class="titre">
		<h1>Ajouter un créneau</h1>
	</div>

	<div class="formulaire divForm container-fluid">
		<form>
			<div class="form-group">
				<label for="date">Date :</label>
				<input class="form-control" type="date" id="date" name="date">
			</div>

			<div class="form-row">
				<div class="form-group col-md-6 col-xs-12">
					<label for="hdb">Heure de début :</label>
					<input class="form-control" type="time" id="hdb" name="hdb">
				</div>

				<div class="form-group col-md-6 col-xs-12">
					<label for="hdf">Heure de fin :</label>
					<input class="form-control" type="time" id="hdf" name="hdf">
				</div>
			</div>

			<!-- TEST -->

			<!-- FIN TEST -->

			<div class="form-group">
				<label for="repeat">Répéter</label>
				<select class="custom-select mr-sm-2">
					<option value="jamais">
						Jamais
					</option>
					<option value="semaine">
						Toutes les semaines
					</option>
				</select>
			</div>
			<button class="btn btn-primary" type="submit">Ajouter</button>
		</div>

	</form>

{% endblock %}
