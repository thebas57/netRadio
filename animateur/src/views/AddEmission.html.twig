{% extends 'Template.html.twig' %}
{% set root = base_url() %}

{% block script %}
	<script src="{{ root }}/public/js/Creneau.js"></script>
{% endblock %}

{% block css %}
	<link rel="stylesheet" href="{{ root }}/public/style/css/Creneau.css">
{% endblock %}

{% block body %}

	<style>
		body {
			background-color: lightgrey;
		}
	</style>

	<div class="titre">
		<h1>Ajouter une Ã©mission</h1>
	</div>

	<div class="formulaire divForm container-fluid">
		<form action="{{ base_url() }}/addEmission" method="post" class="myForm" id="xxxx">
			<div class="form-group">
				<label for="titre">Titre :</label>
				<input class="form-control" type="text" id="titre" name="titre">
			</div>

            <div class="form-group">
				<label for="resume">Resume :</label>
				<input class="form-control" type="text" id="resume" name="resume">
			</div>

            <div class="form-group">
				<label for="fichier">Fichier :</label>
				<input class="form-control-file" type="file" id="fichier" name="fichier">
			</div>

			<div class="form-row">
				<div class="form-group col-md-6 col-xs-12">
					<label for="animateur">Animateur :</label>
					<select class="custom-select mr-sm-2" id="animateur" name="animateur">
                        {% for utilisateur in utilisateurs %}
                            <option value="{{ utilisateur.utilisateur_id }}"> {{utilisateur.identifiant}} </option>
                        {% endfor %}
                    </select>
				</div>

				<div class="form-group col-md-6 col-xs-12">
					<label for="prog">Programme  :</label>
					<select class="custom-select mr-sm-2" id="programme" name="programme">
                        {% for programme in programmes %}
                            <option value="{{ programme.programme_id }}"> {{ programme.nom }} </option>
                        {% endfor %}
                    </select>
				</div>
                <button class="btn btn-primary" type="submit">Ajouter</button>
			</div>

	</form>

{% endblock %}
