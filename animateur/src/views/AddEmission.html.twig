{% extends "Template.html.twig" %}
{% set root = base_url() %}

{% block script %}
	<script src="{{ root }}/public/js/Creneau.js"></script>
{% endblock %}

{% block body %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ root }}/public/style/css/AjoutStaff.css">

	<div class="container">
		<div class="row main">
			<div class="panel-heading col-6 mx-auto">
				<div class="panel-title text-center">
					<h1 class="title">Ajouter une émission</h1>
				</div>
			</div>
			<div class="main-register main-center col-6">
				<form action="{{ root }}/addEmission" method="post" class="row">

					<div class="form-group">
						<i class="fas fa-portrait"></i>
						<label for="titre" class="cols-sm-2 control-label">Titre</label>
						<div class="cols-sm-10">
							<div class="input-group">
								<input type="text" class="form-control" name="titre" id="titre" placeholder="Entrer un titre"/>
							</div>
						</div>
					</div>

					<div class="form-group">
						<i class="fas fa-paragraph"></i>
						<label for="resume" class="cols-sm-2 control-label">Resume</label>
						<div class="cols-sm-10">
							<div class="input-group">
								<input type="text" class="form-control" name="resume" id="resume" placeholder="Entrer un resumé"/>
							</div>
						</div>
					</div>

					<div class="form-group">
						<i class="fas fa-file-audio"></i>
						<label for="fichier" class="cols-sm-2 control-label">Fichier</label>
						<div class="cols-sm-10">
							<div class="custom-file">
								<input type="file" id="fichier" name="fichier">
							</div>
						</div>
					</div>

					<div class="form-group">
						<label for="animateur">Animateur :</label>
						<select class="custom-select mr-sm-2" id="animateur" name="animateur">
							{% for utilisateur in utilisateurs %}
								<option value="{{ utilisateur.utilisateur_id }}">
									{{utilisateur.identifiant}}
								</option>
							{% endfor %}
						</select>
					</div>

					<div class="form-group">
						<label for="prog">Programme  :</label>
						<select class="custom-select mr-sm-2" id="programme" name="programme">
							{% for programme in programmes %}
								<option value="{{ programme.programme_id }}">
									{{ programme.nom }}
								</option>
							{% endfor %}
						</select>
					</div>

					<div class="form-group ">
						<button type="submit" class="btn btn-primary btn-lg btn-block login-button">Ajouter</button>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
