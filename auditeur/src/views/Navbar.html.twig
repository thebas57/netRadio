{% set root = base_url() %}
{% block head %}
    <link rel="stylesheet" href="{{ root }}/public/style/css/Navbar.css">
{% endblock %}
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a href="{{ path_for('Accueil') }}"> <img class="navbar-brand" src="{{ root }}/public/images/logo_netradio.png"></a>
    <!-- collapse : hides the content
    data-target: assign a control of one collapsible element. Need the class collapse to the collapsible element
    aria-expended : false means that the collapsible element is closed by default-->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle Navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <!-- m : margin
    my : height
    sm/md/lg : small/medium/large screen
    mr : space on the right
    ml : space on the left -->
    <div id="navbarMenu" class="navbar-collapse collapse my-2">
        <button class="btn btn-live my-2 my-sm-0 mx-auto" type="button"><a href="{{ path_for('direct') }}">Live<i class="fas fa-microphone-alt ml-2"></i></a></button>
        <figure>
            <audio id="audioLive">

            </audio>
        </figure>
            <div class="dropdown">
                <button class="btn my-2 my-sm-0 btn-submenu dropdown-toggle" type="button" data-toggle="dropdown">Plus
                <span class="caret"></span></button>
                <ul class="dropdown-menu multi-level mr-2" role="menu" aria-labelledby="dropdownMenu">
                <li class="ml-2 mb-1"><a class="txt-drop" href="#">Emissions</a></li>
                <li class="ml-2 mb-1"><a class="txt-drop" href="{{ root }}/planning">Planning</a></li>
                <li class="dropdown-submenu ml-2 mb-1">
                    <a class="txt-drop prog" tabindex="-1">Programmes</a>
                    <ul class="dropdown-menu ml-0">
                    <li class="ml-2 mb-1"><a class="txt-drop" tabindex="-1" href="#">Best-of</a></li>
                    <li class="ml-2 mb-1"><a class="txt-drop" href="#">Summer 2020</a></li>
                    <li class="ml-2 mb-1"><a class="txt-drop" href="#">Guests</a></li>
                    {% if session.user %}
                    <li class="ml-2 mb-1"><a class="txt-drop" href="#">Mes Favoris</a></li>
                    {% endif %}
                    </ul>
                </li>
                </ul>
            </div>

        <form class="form-inline my-2 my-lg-0 mx-auto">
            <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success btn-search my-2 my-sm-0" type="submit">Search<i class="fas fa-search ml-2"></i></button>
        </form>
        {% if not session.user %}
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a href="connexion" class="nav-link">Connexion<i class="fas fa-sign-in-alt ml-1"></i></a></li>
                <li class="nav-item"><a href="inscription" class="nav-link">Inscription<i class="fas fa-user-plus ml-1"></i></a></li>
            </ul>
        {% else %}
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a href="{{root}}/monCompte/{{ session.user.id }}" class="nav-link" data-id="{{ session.user.id }}"><i class="fas fa-user"></i></a></li>
                <li class="nav-item"><a href="{{ root }}/deconnexion" class="nav-link"><i class="fas fa-sign-out-alt ml-1"></i></a></li>
            </ul>
        {% endif %}
    </div>

</nav>

</body>

