{% extends 'Template.html.twig' %}
{% set root = base_url() %}


{% block head %}
<!--  block head qui hérite de son parent, template.html.twig. On y ajoute le css désiré -->
{{ parent() }}
<link rel="stylesheet" href="{{ root }}/public/style/css/Inscription.css">
<script src="{{ root }}/public/js/Inscription.js"></script>
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="col-sm-8 mx-auto">
        <h1 class="titre mb-5 mt-3">Inscription</h1>
    </div>
    <div class="divForm container-fluid">
        <form action="{{ root }}/inscription" method="post">
            <div class="form-group">
                <label for="mail">E-mail :</label>
                <input type="email" class="form-control" id="mail" name="email">
            </div>
            <div class="form-group">
                <label for="login">Identifiant :</label>
                <input type="text" class="form-control" id="login" name="login">
            </div>

            <div class="form-row mb-4">
                <div class="form-group col-lg-6 col-xs-12">
                    <label for="password">Mot de Passe :</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <div class="form-group col-lg-6 col-xs-12">
                    <label for="password2">Veuillez répéter votre mot de passe :</label>
                    <input type="password" class="form-control" id="password2">
                </div>

            </div>

            <button class="btn btn-primary disabled" type="submit" disabled id="inscription">S'inscrire</button>
        </form>
    </div>
    <div class="erreur">
        {% if erreur %}
            {{ erreur }}
        {% endif %}
    </div>
{% endblock %}