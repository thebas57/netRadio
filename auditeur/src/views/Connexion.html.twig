{% extends 'Template.html.twig' %}
{% set root = base_url() %}

{% block head %}
<!--  block head qui hérite de son parent, template.html.twig. On y ajoute le css désiré -->
{{ parent() }}
<link rel="stylesheet" href="{{ root }}/public/style/css/Connexion.css"> 
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="col-sm-8 mx-auto">
        <h1 class="titre mb-5 mt-3">Connexion</h1>
    </div>
    <div class="divForm container-fluid col-sm-6 col-lg-4">
        <form method="POST" action="{{ root }}/connexion">
            <div class="form-group">
                <label for="identifiant"><i class="far fa-user"></i> Identifiant</label>
                <input type="text" name="login" class="form-control" id="identifiant" placeholder="Identifiant">
            </div>

            <div class="form-row mb-4">
                <div class="form-group col-12">
                    <label for="mdp"><i class="fas fa-key"></i> Mot de Passe</label>
                    <input type="password" name="password" class="form-control" id="mdp" placeholder="Mot de passe">
                </div>
            </div>

            <div class="btn-submit">
                <button class="btn btn-primary btn-submit" type="submit">Se connecter</button>
            </div>
        </form>
    </div>
    <div class="erreur">
        {% if erreur %}
            {{ erreur }}
        {% endif %}
    </div>
{% endblock %}